{
  "name": "money-flow-backend",
  "version": "0.1.0",
  "description": "Personal Finance backend (TypeScript + Express + Firestore)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:emulator": "cross-env FIRESTORE_EMULATOR_HOST=localhost:8080 npm run dev",
    "emulator:start": "npx firebase emulators:start --only firestore",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --runInBand",
    "ci": "npm ci && npm test",
    "check:firestore": "npx ts-node src/scripts/checkFirestore.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "cross-env": "^7.0.3",
    "firebase-tools": "^11.23.0"
  }
}